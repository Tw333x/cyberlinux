build()
{
  cd $srcdir/$pkgname

  # Not multi-thread capable
  msg "Building FreeSWITCH"
  make

#    # Download FreeSWITCH sounds
#    msg "Downloading FreeSWITCH sounds"
#    make cd-sounds
#    make cd-moh
#    msg "Downloading FreeSWITCH sounds complete"
}

