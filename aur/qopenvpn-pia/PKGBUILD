pkgname=qopenvpn-pia
pkgver=2.0.1
pkgrel=4
pkgdesc="Simple OpenVPN PyQt GUI with PIA VPN profiles included"
arch=('any')
url="https://github.com/phR0ze/qopenvpn"
license=('GPL3')
depends=('python-pyqt5' 'openvpn' 'systemd')
makedepends=('python-setuptools')
install=$pkgname.install
conficts=('qopenvpn')

source=("$pkgname-$pkgver.tar.gz::https://github.com/phR0ze/qopenvpn/archive/$pkgver.tar.gz"
        "https://www.privateinternetaccess.com/openvpn/openvpn-ip.zip"
        "https://www.privateinternetaccess.com/openvpn/openvpn-strong.zip"
        "override.conf")

sha256sums=('cdb683040e28bf4c04eed21941132e2ca8f83e4dc72f9af446aeed07f1f04335'
            '8d7d75b7cc7b5a40dc26f778eb646c348011657bba90e137a359d18332c4bdad'
            '4897c3a8dd988e87c4c53db2dd1522a0a7112d58a0357425c09d1ce5f9f5a1b5'
            '2e2fc1590238d95bd86d8281e361abaced00c0d6d86d89ce8ceab097a6ce33e4')

prepare()
{
  # Build QOpenVPN
  mv $srcdir/qopenvpn-$pkgver $srcdir/qopenvpn
  cd $srcdir/qopenvpn
  python setup.py build

  # Rename PIA configuration files
  # openvpn doesn't do well with spaces
  for ovpn in $srcdir/*.ovpn; do
    dir=$(dirname "$ovpn")
    base=$(basename "$ovpn")
    x="${base//ovpn/conf}"
    x="${x// /-}"
    x="${x,,}"
    msg2 "Renaming: $base => $x"
    mv "$ovpn" "$dir/$x"
  done
}

package()
{
  # Package QOpenVPN
  cd $srcdir/qopenvpn
  python setup.py install --root=$pkgdir

  # Modify openvpn configuration to leverage a passwords file
  install -Dm600 $srcdir/overide.conf -t $pkgdir/etc/systemd/system/openvpn-client@.service.d

  # Install the qopenvpn icon
  install -Dm600 $srcdir/qopenvpn.png -t $pkgdir/usr/share/icons/hicolor/32x32/apps
  install -Dm600 $srcdir/qopenvpn.png -t $pkgdir/usr/share/icons/hicolor/48x48/apps

  # Package PIA configuration
  cd $srcdir
  install -dm750 $pkgdir/etc/openvpn/client

  # Install openvpn profiles and certs
  for x in $srcdir/*.conf $srcdir/*.crt $srcdir/*.pem; do
    msg2 "Installing: $x"
    install -Dm600 -t $pkgdir/etc/openvpn/client "$x"
  done
}

